{
  "compilerOptions": {
    "target": "ES2020",
    "module": "es2022",               
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./",
    "outDir": "./dist",
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}